<Window
    x:Class="stemwijzer_v2.toevoegPagina"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:stemwijzer_v2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Toevoegen"
    Width="800"
    Height="450"
    Background="#2B2D42"
    Icon="/afbeeldingen/logo.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>

        <!--  VRAGEN GRID ============================================================================================================  -->
        <Grid x:Name="grid_vragen" Visibility="Collapsed">

            <StackPanel
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <ComboBox
                    x:Name="cmb_vragen_verkiezing"
                    Width="200"
                    Height="25"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    controls:TextBoxHelper.Watermark="Verkiezing..."
                    FontSize="12" />
                <TextBox
                    x:Name="tb_vragen_vraag"
                    Width="400"
                    Height="80"
                    Margin="20,0,0,0"
                    VerticalAlignment="Top"
                    controls:TextBoxHelper.Watermark="Vraag..."
                    FontSize="12"
                    TextWrapping="Wrap" />
            </StackPanel>

            <Button
                x:Name="btn_vragen_toevoegen"
                Width="150"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="btn_vragen_toevoegen_Click"
                FontSize="20"
                FontWeight="Bold"
                Style="{x:Null}">
                Voltooien
            </Button>
            <Button
                x:Name="btn_vragen_annuleren"
                Width="150"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="btn_annuleren_Click"
                FontSize="20"
                FontWeight="Bold"
                Style="{x:Null}">
                Annuleren
            </Button>
        </Grid>


        <!--  VERKIEZINGEN GRID ============================================================================================================  -->
        <Grid x:Name="grid_verkiezingen" Visibility="Collapsed">

            <StackPanel
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox
                            x:Name="tb_verkiezingen_verkiezing"
                            Width="370"
                            Height="25"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            controls:TextBoxHelper.Watermark="Verkiezing naam..."
                            FontSize="12" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <controls:DateTimePicker
                            x:Name="dtp_verkiezingen_startDatum"
                            Width="175"
                            Height="25"
                            Margin="0,10,0,0"
                            VerticalAlignment="Top"
                            VerticalContentAlignment="Center"
                            controls:TextBoxHelper.Watermark="Start datum..."
                            FontSize="12" />
                        <controls:DateTimePicker
                            x:Name="dtp_verkiezingen_eindDatum"
                            Width="175"
                            Height="25"
                            Margin="20,10,0,0"
                            VerticalAlignment="Top"
                            controls:TextBoxHelper.Watermark="Eind datum..."
                            FontSize="12" />
                    </StackPanel>
                </StackPanel>
                <TextBox
                    x:Name="tb_verkiezingen_beschrijving"
                    Width="300"
                    Height="150"
                    Margin="20,0,0,0"
                    VerticalAlignment="Top"
                    controls:TextBoxHelper.Watermark="Beschrijving..."
                    FontSize="12"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Visible" />
            </StackPanel>

            <Button
                x:Name="btn_verkiezingen_toevoegen"
                Width="150"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="btn_verkiezingen_toevoegen_Click"
                FontSize="20"
                FontWeight="Bold"
                Style="{x:Null}">
                Voltooien
            </Button>
            <Button
                x:Name="btn_verkiezingen_annuleren"
                Width="150"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="btn_annuleren_Click"
                FontSize="20"
                FontWeight="Bold"
                Style="{x:Null}">
                Annuleren
            </Button>
        </Grid>


        <!--  PARTIJEN GRID ============================================================================================================  -->

        <Grid x:Name="grid_partijen" Visibility="Collapsed">
            <StackPanel
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox
                            x:Name="tb_partijen_partij"
                            Width="320"
                            Height="25"
                            Margin="0,0,10,0"
                            VerticalAlignment="Top"
                            controls:TextBoxHelper.Watermark="Partij naam..."
                            FontSize="12" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox
                            x:Name="tb_partijen_contact"
                            Width="320"
                            Height="37"
                            Margin="0,10,10,0"
                            VerticalAlignment="Top"
                            VerticalContentAlignment="Top"
                            controls:TextBoxHelper.Watermark="contact..."
                            FontSize="12"
                            HorizontalScrollBarVisibility="Visible" />
                    </StackPanel>
                </StackPanel>
                <StackPanel>
                    <Image
                        x:Name="img_partijen_logo"
                        Width="200"
                        Height="150"
                        Margin="0,0,0,0"
                        VerticalAlignment="Top"
                        Visibility="Collapsed" />
                    <TextBox
                        x:Name="tb_partijen_logo"
                        Width="150"
                        Height="25"
                        Margin="0,0,0,0"
                        VerticalAlignment="Top"
                        controls:TextBoxHelper.Watermark="Logo naam..."
                        FontSize="12"
                        Visibility="Collapsed" />
                </StackPanel>
                <StackPanel Margin="5,0,0,0">
                    <Button
                        x:Name="btn_logo_toevoegen"
                        Width="150"
                        Height="20"
                        Background="Green"
                        Click="btn_logo_toevoegen_Click"
                        FontSize="12"
                        FontWeight="Bold"
                        Style="{x:Null}">
                        afbeelding toevoegen
                    </Button>
                    <Button
                        x:Name="btn_logo_verwijderen"
                        Width="150"
                        Height="20"
                        Margin="0,20,0,0"
                        Background="Red"
                        Click="btn_logo_verwijderen_Click"
                        FontSize="12"
                        FontWeight="Bold"
                        Style="{x:Null}">
                        afbeelding verwijderen
                    </Button>
                </StackPanel>
            </StackPanel>

            <Button
                x:Name="btn_partijen_toevoegen"
                Width="150"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="btn_partijen_toevoegen_Click"
                FontSize="20"
                FontWeight="Bold"
                Style="{x:Null}">
                Voltooien
            </Button>
            <Button
                x:Name="btn_partijen_annuleren"
                Width="150"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="btn_annuleren_Click"
                FontSize="20"
                FontWeight="Bold"
                Style="{x:Null}">
                Annuleren
            </Button>
        </Grid>


        <!--  USERS GRID ============================================================================================================  -->

        <Grid x:Name="grid_users" Visibility="Collapsed">
            <StackPanel
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBox
                            x:Name="tb_users_gebruikersnaam"
                            Width="200"
                            Height="25"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            controls:TextBoxHelper.Watermark="gebruikersnaam..."
                            FontSize="12" />
                    </StackPanel>
                    <StackPanel>
                        <TextBox
                            x:Name="tb_users_email"
                            Width="200"
                            Height="25"
                            Margin="20,0,0,0"
                            VerticalAlignment="Top"
                            controls:TextBoxHelper.Watermark="email..."
                            FontSize="12" />
                    </StackPanel>
                    <StackPanel>
                        <TextBox
                            x:Name="tb_users_wachtwoord"
                            Width="200"
                            Height="25"
                            Margin="20,0,0,0"
                            VerticalAlignment="Top"
                            controls:TextBoxHelper.Watermark="wachtwoord..."
                            FontSize="12" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                    <StackPanel>
                        <ComboBox
                            x:Name="cmb_users_machtiging"
                            Width="200"
                            Height="25"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            VerticalContentAlignment="Center"
                            controls:TextBoxHelper.Watermark="Machtiging..."
                            FontSize="12"
                            SelectedIndex="0">
                            <ComboBoxItem Content="gebruiker" />
                            <ComboBoxItem Content="medewerker" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel>
                        <controls:DateTimePicker
                            x:Name="dtp_users_geboorteDatum"
                            Width="200"
                            Height="25"
                            Margin="20,0,0,0"
                            VerticalAlignment="Top"
                            VerticalContentAlignment="Center"
                            controls:TextBoxHelper.Watermark="geboorte datum..."
                            FontSize="12" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <Button
                x:Name="btn_users_toevoegen"
                Width="150"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="btn_users_toevoegen_Click"
                FontSize="20"
                FontWeight="Bold"
                Style="{x:Null}">
                Voltooien
            </Button>
            <Button
                x:Name="btn_users_annuleren"
                Width="150"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="btn_annuleren_Click"
                FontSize="20"
                FontWeight="Bold"
                Style="{x:Null}">
                Annuleren
            </Button>
        </Grid>


    </Grid>


</Window>
