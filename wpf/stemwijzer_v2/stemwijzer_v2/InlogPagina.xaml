<Window
    x:Class="stemwijzer_v2.InlogPagina"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:stemwijzer_v2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Inloggen"
    Width="600"
    Height="300"
    MinWidth="600"
    MinHeight="300"
    MaxWidth="600"
    MaxHeight="300"
    Background="#2B2D42"
    Icon="/afbeeldingen/logo.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>



        <ComboBox
            x:Name="cmb_pagina"
            Width="150"
            Height="23"
            Margin="0,15,15,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            SelectedIndex="5"
            Style="{x:Null}">
            <ComboBoxItem
                x:Name="cmbi_gb"
                Style="{x:Null}"
                Visibility="Collapsed">
                Gebruikersbeheer
            </ComboBoxItem>
            <ComboBoxItem
                x:Name="cmbi_pb"
                Style="{x:Null}"
                Visibility="Collapsed">
                Partijenbeheer
            </ComboBoxItem>
            <ComboBoxItem
                x:Name="cmbi_vb"
                Style="{x:Null}"
                Visibility="Collapsed">
                Verkiezingenbeheer
            </ComboBoxItem>
            <ComboBoxItem
                x:Name="cmbi_vkb"
                Style="{x:Null}"
                Visibility="Collapsed">
                Vragenbeheer
            </ComboBoxItem>
            <ComboBoxItem
                x:Name="cmbi_pmb"
                Style="{x:Null}"
                Visibility="Collapsed">
                PartijMeningenbeheer
            </ComboBoxItem>
            <ComboBoxItem Style="{x:Null}">Inloggen/Uitloggen</ComboBoxItem>
        </ComboBox>

        <TextBlock
            x:Name="tb_uitloggen_inloggen"
            Margin="15"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="18"
            FontWeight="Bold"
            Foreground="Red">
            Uitgelogd
        </TextBlock>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox
                x:Name="tb_gebruikersnaam_email"
                Width="200"
                Height="30"
                Margin="0,50,0,0"
                VerticalContentAlignment="Center"
                controls:TextBoxHelper.Watermark="Gebruikersnaam/Email"
                FontSize="15" />
            <PasswordBox
                x:Name="pb_wachtwoord"
                Width="200"
                Height="30"
                Margin="0,10,0,0"
                VerticalContentAlignment="Center"
                controls:TextBoxHelper.Watermark="Wachtwoord"
                FontSize="15"
                PasswordChar="*" />
            <Button
                x:Name="btn_inloggen"
                Width="200"
                Height="30"
                Margin="0,20,0,0"
                Click="btn_inloggen_Click"
                FontSize="18"
                Style="{x:Null}">
                Inloggen
            </Button>
        </StackPanel>


    </Grid>
</Window>
