<Window
    x:Class="stemwijzer_v2.LogoToevoegenPagina"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:stemwijzer_v2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Logo toevoegen"
    Width="800"
    Height="250"
    MinWidth="800"
    MinHeight="250"
    MaxWidth="800"
    MaxHeight="250"
    Background="#2B2D42"
    Icon="/afbeeldingen/logo.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>

        <StackPanel VerticalAlignment="Center">
            <StackPanel
                MaxWidth="750"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="btn_kiesBestand"
                    Width="150"
                    Height="20"
                    VerticalAlignment="Center"
                    Click="btn_kiesBestand_Click"
                    Style="{x:Null}">
                    Kies een bestand...
                </Button>
                <Image
                    x:Name="img_bestandPreview"
                    MaxWidth="250"
                    MaxHeight="100"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Visibility="Collapsed" />
                <TextBlock
                    x:Name="tb_bestandPath"
                    MaxWidth="445"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="White"
                    TextWrapping="Wrap"
                    Visibility="Collapsed" />
            </StackPanel>
            <TextBox
                x:Name="tb_afbNaam"
                Width="200"
                Height="30"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                controls:TextBoxHelper.Watermark="Afbeelding naam...."
                FontSize="15" />
        </StackPanel>

        <Button
            x:Name="btn_voltooien"
            Width="150"
            Height="40"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="btn_voltooien_Click"
            FontSize="20"
            FontWeight="Bold"
            Style="{x:Null}">
            Voltooien
        </Button>
        <Button
            x:Name="btn_annuleren"
            Width="150"
            Height="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="btn_annuleren_Click"
            FontSize="20"
            FontWeight="Bold"
            Style="{x:Null}">
            Annuleren
        </Button>
    </Grid>
</Window>
